<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>
<form action="/">
  태그 : <input name="q" type="search" placeholder="태그 검색" aria-label="태그 검색">
  <button type="submit">검색하기</button>
</form>

<form action="/">
  <button type="submit" name="q" value="1">1번 태그</button>
</form>
<form action="/">
  <button type="submit" name="q" value="2">2번 태그</button>
</form>
<form action="/">
  <button type="submit" name="q" value="3">3번 태그</button>
</form>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>User</th>
      <th>Photo</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.user_id %></td>
        <td><img src="<%= post.image.small %>"></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
